<?xml version="1.0"?>
<robot name="simple_creature">

  <material name="red">
    <color rgba="0.8 0.2 0.2 1.0"/>
  </material>
  <material name="green">
    <color rgba="0.2 0.8 0.2 1.0"/>
  </material>

  <link name="torso">
    <visual>
      <geometry>
        <box size="0.4 0.2 0.1"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <material name="red"/>
    </visual>
    <collision>
      <geometry>
        <box size="0.4 0.2 0.1"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0"/>
    </collision>
    <inertial>
      <mass value="1"/>
      <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01"/>
    </inertial>
  </link>

  <joint name="joint_fr" type="revolute">
    <parent link="torso"/>
    <child link="leg_fr"/>
    <origin xyz="0.2 0.1 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-1.5" upper="1.5" effort="10" velocity="1.0"/>
  </joint>

  <link name="leg_fr">
    <visual>
      <geometry>
        <box size="0.02 0.1 0.3"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 -0.15"/>
      <material name="green"/>
    </visual>
    <collision>
      <geometry>
        <box size="0.02 0.1 0.3"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 -0.15"/>
    </collision>
    <inertial>
      <mass value="0.1"/>
      <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01"/>
    </inertial>
  </link>

  <joint name="joint_fl" type="revolute">
    <parent link="torso"/>
    <child link="leg_fl"/>
    <origin xyz="0.2 -0.1 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-1.5" upper="1.5" effort="10" velocity="1.0"/>
  </joint>

  <link name="leg_fl">
    <visual>
      <geometry><box size="0.02 0.1 0.3"/></geometry>
      <origin rpy="0 0 0" xyz="0 0 -0.15"/>
      <material name="green"/>
    </visual>
    <collision>
      <geometry><box size="0.02 0.1 0.3"/></geometry>
      <origin rpy="0 0 0" xyz="0 0 -0.15"/>
    </collision>
    <inertial>
      <mass value="0.1"/>
      <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01"/>
    </inertial>
  </link>

  <joint name="joint_br" type="revolute">
    <parent link="torso"/>
    <child link="leg_br"/>
    <origin xyz="-0.2 0.1 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-1.5" upper="1.5" effort="10" velocity="1.0"/>
  </joint>

  <link name="leg_br">
    <visual>
      <geometry><box size="0.02 0.1 0.3"/></geometry>
      <origin rpy="0 0 0" xyz="0 0 -0.15"/>
      <material name="green"/>
    </visual>
    <collision>
      <geometry><box size="0.02 0.1 0.3"/></geometry>
      <origin rpy="0 0 0" xyz="0 0 -0.15"/>
    </collision>
    <inertial>
      <mass value="0.1"/>
      <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01"/>
    </inertial>
  </link>

  <joint name="joint_bl" type="revolute">
    <parent link="torso"/>
    <child link="leg_bl"/>
    <origin xyz="-0.2 -0.1 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-1.5" upper="1.5" effort="10" velocity="1.0"/>
  </joint>

  <link name="leg_bl">
    <visual>
      <geometry><box size="0.02 0.1 0.3"/></geometry>
      <origin rpy="0 0 0" xyz="0 0 -0.15"/>
      <material name="green"/>
    </visual>
    <collision>
      <geometry><box size="0.02 0.1 0.3"/></geometry>
      <origin rpy="0 0 0" xyz="0 0 -0.15"/>
    </collision>
    <inertial>
      <mass value="0.1"/>
      <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01"/>
    </inertial>
  </link>

</robot>